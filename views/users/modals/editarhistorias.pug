#editar.modal(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
  .modal-dialog(role='document')
    .modal-content
      .modal-header
        h5#exampleModalLabel.modal-title Editar Historia
        button.close(type='button' data-dismiss='modal' aria-label='Close')
          span(aria-hidden='true') &times;
      .modal-body
          .form-group
            label.col-form-label(for='nameid') Nombre de la historia:
            input.form-control(type='text', id='nameid', name='nameid')
          .form-group
            input.form-control(hidden='true',type='text', id='storieid', name='storieid')
          .form-group
            label.col-form-label(for='howid') Como:
            textarea.form-control(type='text',id='howid',name='howid')
          .form-group    
            label.col-form-label(for='wantid') Quiero:
            textarea.form-control(id='wantid',name='wantid')
          .form-group
            label.col-form-label(for='thatid') De tal manera:
            textarea.form-control(id='thatid',name='thatid')
          .form-group
            label.col-form-label(for='givenid') Dado:
            textarea.form-control(id='givenid',name='givenid')
          .form-group
            label.col-form-label(for='whenid') Cuando:
            textarea.form-control(id='whenid',name='whenid')
          .form-group
            label.col-form-label(for='thenid') Entonces:
            textarea.form-control(id='thenid',name='thenid')
      
          .form-group
            label.col-form-label(for= 'priorityid') Prioridad:
            select.form-control(id='priorityid', name='priorityid' v-model='prioridad')
              option(value='P1') 1
              option(value='P2') 2
              option(value='P3') 3
              
          .form-group
            label.col-form-label(for='hrsTrab') Horas trabajadas hoy:
            textarea.form-control(id='hrsTrab',name='hrsTrab')
          
          .form-group
            label.col-form-label(for= 'backlogid') Cambiar de tablero:
            select.form-control(id='backlogid', name='backlogid' v-model='backlog')
              option(value='R1') Release 1
              option(value='R2') Release 2
              
          .form-group
            label.col-form-label(for= 'finishedid') Â¿Historia terminada?:
            select.form-control(id='finishedid', name='finishedid' v-model='terminada')
              option(value='H1') No
              option(value='H2') Si
              
                    
          .form-group
            input(hidden='true' id='hrsTrabid' name='hrsTrabid',value="0")
            input(hidden='true' id='backlog' name='backlog',value="0")
                             
          .form-group                 
            button.btn.btn-primary(type='button', @click='updatehistoria' data-dismiss='modal') Actualizar 
            button.btn.btn-secondary(type='button' data-dismiss='modal') Cerrar 
