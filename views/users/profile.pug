extends ../layout
block content
  link#bootstrap-css(href='http://netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css' rel='stylesheet')
  script(src='http://netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js')
  script(src='http://code.jquery.com/jquery-1.11.1.min.js')
  .container-scroller
    nav.navbar.default-layout.col-lg-12.col-12.p-0.fixed-top.d-flex.flex-row
      .text-center.navbar-brand-wrapper.d-flex.align-items-top.justify-content-center
        a.navbar-brand.brand-logo(href='/')
          strong SCRUMPage
        a.navbar-brand.brand-logo-mini(href='/')
          img(src='/images/logo-mini.svg' alt='logo')
      .navbar-menu-wrapper.d-flex.align-items-center

        ul.navbar-nav.navbar-nav-right
          li.nav-item.dropdown.d-none.d-xl-inline-block
            a#UserDropdown.nav-link.dropdown-toggle(href='#' data-toggle='dropdown' aria-expanded='false')
              span.profile-text Hola, #{usuario.fullName}!
              img.img-xs.rounded.circle(src=usuario.thumbnail)
            .dropdown-menu.dropdown-menu-right.navbar-dropdown(aria-labelledby='UserDropdown')
              a.dropdown-item.p-0
                .d-flex.border-bottom
                  .py-3.px-4.d-flex.align-items-center.justify-content-center
                    i.mdi.mdi-bookmark-plus-outline.mr-0.text-gray  
                  .py-3.px-4.d-flex.align-items-center.justify-content-center.border-left.border-right
                    i.mdi.mdi-account-outline.mr-0.text-gray 
                  .py-3.px-4.d-flex.align-items-center.justify-content-center
                    i.mdi.mdi-alarm-check.mr-0.text-gray 
              a.dropdown-item.mt-2
                | Administrar cuentas
              a.dropdown-item
                | Cambiar contraseña
              a.dropdown-item
                | Revisar mensajes 
              a.dropdown-item(href='/auth/logout')
                | Salir
        button.navbar-toggler.navbar-toggler-right.d-lg-none.align-self-center(type='button' data-toggle='offcanvas')
          span.mdi.mdi-menu

    .container-fluid.page-body-wrapper
      nav#sidebar.sidebar.sidebar-offcanvas
        ul.nav
          li.nav-item.nav-profile
            .nav-link
              .user-wrapper
                .profile-image
                  img(src=usuario.thumbnail)
                .text-wrapper
                  p.profile-name #{usuario.fullName}
                  div
                    small.designation.text-muted #{usuario.role}
                    span.status-indicator.online
              button.btn.btn-success.btn-block(type='button' data-toggle='modal' data-target='#myModal')
                | Proyecto Nuevo
                i.mdi.mdi-plus
          li.nav-item
            a.nav-link(href='/team/list')
              i.menu-icon.mdi.mdi-television
              span.menu-title Equipo de trabajo
          li.nav-item
            a.nav-link(href='/projects/list')
              i.menu-icon.mdi.mdi-table
              span.menu-title Proyectos
      #myModal.modal(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
        .modal-dialog(role='document')
          .modal-content
            .modal-header
              h5#exampleModalLabel.modal-title Crear proyecto
              button.close(type='button' data-dismiss='modal' aria-label='Close')
                span(aria-hidden='true') &times;
            .modal-body
              form(action='/projects/',method='POST')
                .form-group
                  label.col-form-label(for='nombre') Nombre del proyecto:
                  input.form-control(type='text', id='name', name='name')
                  .form-group
                  label.col-form-label(for='duedate') Fecha de solicitud del proyecto:
                  input.form-control(type='date', id='dueDate',name='dueDate')
                .form-group
                  label.col-form-label(for='startdate') Fecha de arranque del proyecto:
                  input.form-control(type='date', id='startDate',name='startDate')
                .form-group
                  label.col-form-label(for='description') Descripcion del proyecto:
                  textarea.form-control(id='description',name='description')
                .form-group
                  label.col-form-label(for='scrumMaster') Scrum master:
                  input.form-control(type='text',id='scrumMaster',name='scrumMaster', value=usuario.fullName)
                .form-group
                  label.col-form-label(for='owner') Product Owner:
                  input.form-control(type='text',id='owner',name='owner')
                .form-group
                  label.col-form-label(for='team') Equipo de desarrollo:
                  input.form-control(type='text',id='team',name='team')
                .form-group
                  input.btn.btn-primary(type='submit')  
                  button.btn.btn-secondary(type='button' data-dismiss='modal') Cerrar  

      .content-wrapper
                .row
                  div(ip='app')
                    .container
                      .row
                        .col-md-5.toppad.pull-right.col-md-offset-3
                          a(href='edit.html') Edit Profile 
                        .col-xs-12.col-sm-12.col-md-6.col-lg-6.col-xs-offset-0.col-sm-offset-0.col-md-offset-3.col-lg-offset-3.toppad
                          .panel.panel-info
                            .panel-heading
                              h3.panel-title #{member._fullName}
                            .panel-body
                              .row
                                .col-md-9.col-lg-9
                                  table.table.table-user-information
                                    tbody
                                      tr
                                        td Nombre completo:
                                        td #{member._fullName}
                                      tr
                                        td Fecha de cumpleaños
                                        td #{member.birthdayDate}
                                      tr
                                        td Curp
                                        td #{member._curp}
                                      tr
                                      tr
                                        td RFC
                                        td #{member._rfc}
                                      tr
                                        td Dirección
                                        td #{member._home}
                                      tr
                                        td Habilidades
                                        td #{member._abilities}


  script(src='../../vendors/js/vendor.bundle.base.js')
  script(src='../../vendors/js/vendor.bundle.addons.js')
  script(src='../../js/off-canvas.js')
  script(src='../../js/misc.js')
